#!/usr/bin/env bash

# Use "strict mode."
#
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail

eval "$(docopts --help=- -A ARGS : "$@" <<EOF
Show the latest released version of an NPM package.

Usage:
  $(basename "$0") PACKAGE
  $(basename "$0") -h | --help

Options:
  -h --help  Show this documentation
EOF
)"

npm show "${ARGS[PACKAGE]}" version
