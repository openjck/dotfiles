#!/usr/bin/env bash

# Use "strict mode."
#
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail

COMMAND_NAME=$(basename "$0")

eval "$(docopts --help=- -A ARGS : "$@" <<EOF
If a package.json file exists in this directory, show its scripts. Otherwise,
exit with an error message.

Usage:
  $COMMAND_NAME
  $COMMAND_NAME -h | --help

Options:
  -h --help  Show this documentation
EOF
)"

if [[ ! -f package.json ]]; then
  >&2 echo 'Error: package.json not found'
  exit 1
fi

jq '.scripts' package.json
