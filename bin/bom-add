#!/usr/bin/env bash

# Use "strict mode."
#
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail

eval "$(docopts --help=- -A ARGS : "$@" <<EOF
Add a byte order mark (BOM) to the beginning of a file. If one is already
present, a second will not be added.

Usage:
  $(basename "$0") FILE
  $(basename "$0") -h | --help

Options:
  -h --help  Show this documentation
EOF
)"

sed -i '1s/^\(\xef\xbb\xbf\)\?/\xef\xbb\xbf/' "${ARGS[FILE]}"
