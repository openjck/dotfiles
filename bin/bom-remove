#!/usr/bin/env bash

# Use "strict mode."
#
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail

COMMAND_NAME=$(basename "$0")

eval "$(docopts --help=- -A ARGS : "$@" <<EOF
Remove a byte order mark (BOM) from the beginning of a file. If one is not
present, file contents will not be modified.

Usage:
  $COMMAND_NAME FILE
  $COMMAND_NAME -h | --help

Options:
  -h, --help
      Show this documentation
EOF
)"

sed -i '1s/^\xef\xbb\xbf//' "${ARGS[FILE]}"
