#!/usr/bin/env bash

eval "$(docopts --help=- -A ARGS : "$@" <<EOF
Remove a byte order mark (BOM) from the beginning of a file. If one is not
present, nothing will be done.

Usage:
  $(basename "$0") FILE
  $(basename "$0") -h | --help

Options:
  -h --help  Show this documentation
EOF
)"

sed -i '1s/^\xef\xbb\xbf//' "${ARGS[FILE]}"
