# Use Bash's unofficial "strict mode."
#
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -o errexit
set -o nounset
set -o pipefail

COMMAND_NAME=$(basename "$0")

##########################
# BEGIN DEPENDENCY CHECK #
##########################

DEPENDENCIES=(
  docopts
)

MISSING_DEPENDENCIES=()

for DEPENDENCY in "${DEPENDENCIES[@]}"; do
  if ! command -v "$DEPENDENCY" > /dev/null; then
    MISSING_DEPENDENCIES+=("$DEPENDENCY")
  fi
done

if (( ${#MISSING_DEPENDENCIES[@]} > 0 )); then
  >&2 fold --spaces <<EOF
FATAL ERROR: The following are not installed. You must install them on your \
own for "$COMMAND_NAME" to function properly.

EOF
  for DEPENDENCY in "${MISSING_DEPENDENCIES[@]}"; do
    >&2 echo "  - $DEPENDENCY"
  done
  exit 1
fi

########################
# END DEPENDENCY CHECK #
########################

eval "$(docopts --help=- -A ARGS : "$@" <<EOF
Remove a byte order mark (BOM) from input.

If a BOM is not present, input will not be modified.

Usage:
  $COMMAND_NAME [FILE]
  $COMMAND_NAME -h | --help

Examples:
  $COMMAND_NAME example.csv
  (cat example.csv | $COMMAND_NAME) > example_without_bom.csv

Options:
  -h, --help
      Show this documentation
EOF
)"

if [[ -n "${ARGS[FILE]}" && ! -f "${ARGS[FILE]}" ]]; then
  >&2 fold --spaces <<< "FATAL ERROR: File \"${ARGS[FILE]}\" does not exist."
  exit 1
fi

# https://unix.stackexchange.com/a/381263/410447
SED_EXPRESSION='1s/^\xef\xbb\xbf//'

if [[ ${ARGS[FILE]} ]]; then
  sed -i "$SED_EXPRESSION" "${ARGS[FILE]}"
else
  sed "$SED_EXPRESSION"
fi
