xdg_config_home = os.environ["XDG_CONFIG_HOME"]
distro = os.environ["DISTRO"]

config = {
    "packages": {
        "debian": [
            "bat",
            "fd-find",
            "flatpak",
            "git",
            "moreutils",
            "pwgen",
            "ripgrep",
            "sd",
            "toilet",
            "vcsh",
        ],
    },
    "flatpaks": {
        "flathub-verified": [
            "org.mozilla.firefox",
        ],
        "flathub": [],
    },
    "snaps": [
        {
            "name": "nvim",
            "flags": [
                "--classic",
            ],
        },
    ],
    "directories": [
        "~/LGTD/inboxes/main",
        "~/apps/repos/git",
        "~/apps/appimage",
        "~/bin/local",
        "~/bin/local/downloaded",
        "~/bin/local/temporary",
        "~/devel",
        "~/devel/repos",
        f"{xdg_config_home}/bash/init/functions/local",
    ],
}


@dataclass
class Step:
    term: str
    own_activity_output: bool = False


class Result(Enum):
    DONE = 1
    ALREADY_DONE = 2
    UNSUPPORTED = 3


class VcshConfigResult(Enum):
    MODIFIED = 1
    UNMODIFIED = 2


# Run a command, allowing stdout and stderr to be printed to the console.
def run(cmd: str):
    return subprocess.run(cmd, shell=True)


# Run a command, allowing stderr to be printed to the console, but discarding
# stdout (i.e., not allowing it to print on the console and not capturing it
# for use in this script).
def run_quietly(cmd: str):
    return subprocess.run(cmd, shell=True, stdout=subprocess.DEVNULL)


# Run a command, capturing stdout and allowing stderr to be printed to the
# console.
def run_and_capture(cmd: str):
    return (
        subprocess.run(cmd, shell=True, stdout=subprocess.PIPE)
        .stdout.decode("utf-8")
        .strip()
    )


# Run a command, discarding both stdout and stderr.
def run_silently(cmd: str):
    return subprocess.run(
        cmd,
        shell=True,
        stdout=subprocess.DEVNULL,
        stderr=subprocess.DEVNULL,
    )


def set_vcsh_config(config: str, desired_value: str):
    value = run_and_capture(f"vcsh dotfiles-openjck config {config}")

    if value == desired_value:
        return VcshConfigResult.UNMODIFIED
    else:
        run_quietly(f"vcsh dotfiles-openjck config {config} {desired_value}")
        return VcshConfigResult.MODIFIED


def set_up_packages_debian():
    packages_to_install = []

    for package in config["packages"]["debian"]:
        if run_silently(f"dpkg -s {package}").returncode != 0:
            packages_to_install.append(package)

    if len(packages_to_install) == 0:
        return Result.ALREADY_DONE
    else:
        run(f'sudo apt install --yes {" ".join(packages_to_install)}')
        return Result.DONE


def set_up_packages():
    match distro:
        case "Ubuntu" | "Debian":
            return set_up_packages_debian()
        case _:
            return Result.UNSUPPORTED


def set_up_flatpaks():
    installed_any = False

    # Set up remotes, including one remote for Flathub and one remote for
    # verified flatpaks on Flathub.
    run_quietly(
        "flatpak remote-add --if-not-exists flathub "
        + "https://dl.flathub.org/repo/flathub.flatpakrepo"
    )
    run_quietly(
        "flatpak remote-add --if-not-exists --subset=verified "
        + "flathub-verified https://flathub.org/repo/flathub.flatpakrepo"
    )

    for remote, flatpaks in config["flatpaks"].items():
        flatpaks_to_install = []

        for flatpak in flatpaks:
            if run_silently(f"flatpak info {flatpak}").returncode != 0:
                flatpaks_to_install.append(flatpak)

        if len(flatpaks_to_install) > 0:
            # Print a newline before the first set of flatpaks to be installed
            # so that any output appears below "Setting up flatpaks...". Also
            # ensure the newline is printed _only_ for the first set of
            # flatpaks to be installed so that subsequent installation output
            # is not separated by newlines.
            if not installed_any:
                print()
            run(
                f"flatpak install --noninteractive {remote} "
                + " ".join(flatpaks_to_install)
            )
            installed_any = True

    if installed_any:
        return Result.DONE
    else:
        return Result.ALREADY_DONE


def set_up_snaps():
    if distro != "Ubuntu":
        return Result.UNSUPPORTED

    installed_any = False

    for snap in config["snaps"]:
        if run_silently(f"snap list {snap['name']}").returncode != 0:
            # Print a newline before the first snap to be installed so that any
            # output appears below "Setting up snaps...". Also ensure the
            # newline is printed _only_ for the first snap to be installed so
            # that subsequent installation output is not separated by newlines.
            if not installed_any:
                print()
            run(f'sudo snap install {snap['name']} {" ".join(snap['flags'])}')
            installed_any = True

    if installed_any:
        return Result.DONE
    else:
        return Result.ALREADY_DONE


def set_up_vcsh():
    modified_config = False

    show_untracked_result = set_vcsh_config("status.showUntrackedFiles", "no")
    if show_untracked_result == VcshConfigResult.MODIFIED:
        modified_config = True

    sparse_checkout_result = set_vcsh_config("core.sparseCheckout", "true")
    if sparse_checkout_result == VcshConfigResult.MODIFIED:
        modified_config = True

    # Note that the final newline (the newline after the last line of text) is
    # not a mistake, and it's not required by Python syntactically. It's there
    # so that the file ends with a newline, as Unix conventions require.
    sc_file_contents = """*
!/README.md
!/LICENSE
!/docs/**
"""

    sc_filename = (
        f"{xdg_config_home}/vcsh/repo.d/dotfiles-openjck.git/info/sparse-checkout"
    )

    if (not os.path.isfile(sc_filename)) or open(
        sc_filename, mode="r"
    ).read() != sc_file_contents:
        sc_file = open(sc_filename, mode="w")
        sc_file.write(sc_file_contents)
        sc_file.close()
        modified_config = True

    if modified_config:
        return Result.DONE
    else:
        return Result.ALREADY_DONE


def set_up_directories():
    created_any = False

    for directory in config["directories"]:
        path = Path(directory).expanduser()
        if not path.is_dir():
            path.mkdir(parents=True)
            created_any = True

    if created_any:
        return Result.DONE
    else:
        return Result.ALREADY_DONE


def set_up_tmux():
    tpm_path = Path("~/.tmux/plugins/tpm").expanduser()
    tpm_path_str = tpm_path.absolute().as_posix()

    if tpm_path.is_dir():
        return Result.ALREADY_DONE
    else:
        print()

        # Install tpm.
        run(f"git clone --quiet https://github.com/tmux-plugins/tpm {tpm_path_str}")

        # Install plugins.
        run(f"{tpm_path_str}/bin/install_plugins")

        return Result.DONE


def run_steps(steps):
    longest_term_length = max(map(lambda s: len(s.term), steps))

    for step in steps:
        run_step(step, longest_term_length)

    return 0


def run_step(step, longest_term_length):
    term_suffix = "... "
    pad_length = longest_term_length + len(term_suffix)
    padded_term_and_suffix = (step.term + term_suffix).ljust(pad_length)

    print(f"Setting up {padded_term_and_suffix}", end="", flush=True)

    setup_fn_name = f"set_up_{step.term}"
    result = globals()[setup_fn_name]()

    match result:
        case Result.DONE:
            if not step.own_activity_output:
                print("done.")
        case Result.ALREADY_DONE:
            print("already done.")
        case Result.UNSUPPORTED:
            print("unsupported.")


def print_help(filename: str):
    help_text = f"""
Set up the packages, directories, plugin managers, and other dotfile
dependencies used across machines.

This script is idempotent and can therefore be run multiple times without
affecting the result, assuming the script's implementation does not change
between invocations. It should be rerun occasionally or whenever important
details change, like configured packages or configured directories.

Usage:
  {filename}
  {filename} -h | --help

Options:
  -h, --help
      Show this documentation
""".strip()

    print(help_text)
    return 0


def main():
    if len(sys.argv) > 1 and sys.argv[1] in ("-h", "--help"):
        filename = os.path.basename(__file__)
        return print_help(filename)
    else:
        steps = [
            Step("packages", own_activity_output=True),
            Step("flatpaks", own_activity_output=True),
            Step("snaps", own_activity_output=True),
            Step("vcsh"),
            Step("directories"),
            Step("tmux", own_activity_output=True),
        ]

        return run_steps(steps)


if __name__ == "__main__":
    sys.exit(main())
