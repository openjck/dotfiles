# Use "strict mode."
#
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail

COMMAND_NAME=$(basename "$0")

##########################
# BEGIN DEPENDENCY CHECK #
##########################

DEPENDENCIES=(
  docopts
)

MISSING_DEPENDENCIES=()

for DEPENDENCY in "${DEPENDENCIES[@]}"; do
  if ! command -v "$DEPENDENCY" > /dev/null; then
    MISSING_DEPENDENCIES+=("$DEPENDENCY")
  fi
done

if (( ${#MISSING_DEPENDENCIES[@]} > 0 )); then
  >&2 fold --spaces <<EOF
FATAL ERROR: The following are not installed. They must be manually installed \
for "$COMMAND_NAME" to function properly.

EOF
  for DEPENDENCY in "${MISSING_DEPENDENCIES[@]}"; do
    >&2 echo "  - $DEPENDENCY"
  done
  exit 1
fi

########################
# END DEPENDENCY CHECK #
########################

eval "$(docopts --help=- -A ARGS : "$@" <<EOF
Print the line indicated by the given number.

Usage:
  $COMMAND_NAME LINE_NUMBER [FILE]
  $COMMAND_NAME -h | --help

Examples:
  $COMMAND_NAME 4 /etc/hosts
  cal | $COMMAND_NAME 1

Options:
  -h, --help
      Show this documentation
EOF
)"

FILE_OR_STDIN=${ARGS[FILE]:-/dev/stdin}

awk "NR==${ARGS[LINE_NUMBER]}" "$FILE_OR_STDIN"
