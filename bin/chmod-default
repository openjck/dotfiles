#!/usr/bin/env bash

eval "$(docopts --help=- -A ARGS : "$@" <<EOF
Set the default system permissions on a file or directory.

Usage:
  $(basename "$0") FILE
  $(basename "$0") -h | --help

Options:
  -h --help  Show this documentation
EOF
)"

# https://unix.stackexchange.com/a/249850
if [[ -f "${ARGS[FILE]}" ]]; then
  chmod "=rw" "${ARGS[FILE]}"
elif [[ -d "${ARGS[FILE]}" ]]; then
  chmod "=rwx" "${ARGS[FILE]}"
else
  >&2 echo "Error: Unsupported node type"
  exit 1
fi
