# Use "strict mode."
#
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail

COMMAND_NAME=$(basename "$0")

eval "$(docopts --help=- -A ARGS : "$@" <<EOF
Set the default system permissions on a file or directory.

Usage:
  $COMMAND_NAME FILE
  $COMMAND_NAME -h | --help

Options:
  -h, --help
      Show this documentation
EOF
)"

# https://unix.stackexchange.com/a/249850
if [[ -f "${ARGS[FILE]}" ]]; then
  chmod '=rw' "${ARGS[FILE]}"
elif [[ -d "${ARGS[FILE]}" ]]; then
  chmod '=rwx' "${ARGS[FILE]}"
else
  >&2 echo "Error: Node type is not supported."
  exit 1
fi
